<main>
        <section class="Form my-4 mx-5">
          <div class="container">
            <div class="row">
              <div class="col-lg-5 px-5 pt-5">
                <img
                  src="/images/eating.jpg"
                  alt="Orphanage image"
                  class="img-fluid "
                  style="margin-bottom: 20px;"
                  
                  
                
                />
                 <img
                  src="/images/happy.jpg"
                  alt="Children image"
                  class="img-fluid "
                  
                  
                
                />
              </div>
              <div class="col-lg-7 px-5 pt-5">
                <h1 class="cashflow display-5 fw-bold mb-3">Orphanage Signup</h1>
                <form method="post" action="/save-orphanages">
                  <div class="form-row">
                    <div class="col-lg-7">
                      <label for="name">Name</label>
                      <input
                        type="text"
                        class="form-control mt-1 mb-3 p-3"
                        id="name"
                        name="name"
                        placeholder="Enter orphanage name"
                        
                      />
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-lg-7">
                      <label for="location">Location</label>
                                           <input
                        type="text"
                        class="form-control mt-1 mb-3 p-3"
                        id="location"
                        name="location"
                        placeholder="Enter orphanage location"
                        
                      />
                    </div>
                  <div class="form-row">
                    <div class="col-lg-7">
                      <label for="contact">Contact</label>
                                           <input
                        type="tel"
                        class="form-control mt-1 mb-3 p-3"
                        id="contact"
                        name="contact"
                        placeholder="Enter orphanage contact"
                        
                      />
                    </div>
                  <div class="form-row">
                    <div class="col-lg-7">
                      <label for="email">Email</label>
                                           <input
                        type="text"
                        class="form-control mt-1 mb-3 p-3"
                        id="email"
                        name="email"
                        placeholder="Enter orphanage email"
                        
                      />
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-lg-7">
                      <label for="password">Password</label>
                      <input
                        type="password"
                        class="form-control mt-1 mb-3 p-3"
                        id="password"
                        name="password"
                        placeholder="Enter password"
                      />
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-lg-7">
                      <button
                        type="submit"
                        class="btn btn-primary btn1 btn-new mt-2"
                      >
                        Submit
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>
      </main>

